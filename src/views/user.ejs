<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Cuenta - Honeypot Security</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2563eb;
            --primary-dark: #1d4ed8;
            --success: #10b981;
            --danger: #ef4444;
            --gray-50: #f8fafc;
            --gray-100: #f1f5f9;
            --gray-200: #e2e8f0;
            --gray-400: #94a3b8;
            --gray-600: #475569;
            --gray-800: #1e293b;
            --border-radius: 10px;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: var(--gray-50);
            min-height: 100vh;
            padding: 20px;
            color: var(--gray-800);
        }

        .dashboard-container {
            max-width: 1000px;
            margin: 0 auto;
        }

        /* Header */
        .dashboard-header {
            background: white;
            border-radius: var(--border-radius);
            padding: 25px 30px;
            margin-bottom: 25px;
            box-shadow: var(--shadow);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
            border-left: 4px solid var(--primary);
        }

        .header-left h1 {
            font-size: 24px;
            color: var(--gray-800);
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .header-left h1 i {
            color: var(--primary);
        }

        .header-left p {
            color: var(--gray-600);
            font-size: 15px;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .user-badge {
            display: flex;
            align-items: center;
            gap: 12px;
            background: var(--gray-100);
            padding: 10px 15px;
            border-radius: 8px;
            border: 1px solid var(--gray-200);
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            background: var(--primary);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 16px;
        }

        .user-details h3 {
            font-size: 15px;
            font-weight: 600;
            color: var(--gray-800);
            margin-bottom: 4px;
        }

        .user-details p {
            font-size: 13px;
            color: var(--gray-600);
        }

        .logout-btn {
            background: var(--danger);
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: background 0.2s;
        }

        .logout-btn:hover {
            background: #dc2626;
        }

        /* Alert */
        .alert {
            background: #f0fdf4;
            border-left: 4px solid var(--success);
            padding: 16px 20px;
            border-radius: 8px;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 12px;
            color: #166534;
        }

        .alert i {
            font-size: 18px;
        }

        .alert .close-alert {
            margin-left: auto;
            background: none;
            border: none;
            color: inherit;
            opacity: 0.5;
            cursor: pointer;
            padding: 4px;
            border-radius: 4px;
        }

        .alert .close-alert:hover {
            opacity: 1;
            background: rgba(0, 0, 0, 0.05);
        }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            border-radius: var(--border-radius);
            padding: 25px;
            box-shadow: var(--shadow);
            border-top: 3px solid var(--primary);
            position: relative;
        }

        .stat-card:nth-child(2) {
            border-color: var(--success);
        }

        .stat-card:nth-child(3) {
            border-color: var(--danger);
        }

        .stat-icon {
            position: absolute;
            top: 20px;
            right: 20px;
            color: var(--gray-200);
            font-size: 24px;
        }

        .stat-content h3 {
            font-size: 28px;
            font-weight: 700;
            color: var(--gray-800);
            margin-bottom: 5px;
        }

        .stat-content p {
            font-size: 14px;
            color: var(--gray-600);
        }

        /* Quick Actions */
        .actions-section {
            background: white;
            border-radius: var(--border-radius);
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: var(--shadow);
        }

        .section-header {
            margin-bottom: 25px;
        }

        .section-header h2 {
            font-size: 20px;
            font-weight: 600;
            color: var(--gray-800);
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 5px;
        }

        .section-header p {
            color: var(--gray-600);
            font-size: 14px;
        }

        .actions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 15px;
        }

        .action-btn {
            background: var(--gray-50);
            border: 2px solid var(--gray-200);
            border-radius: 8px;
            padding: 20px 15px;
            text-decoration: none;
            color: var(--gray-800);
            transition: all 0.2s;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 12px;
            text-align: center;
        }

        .action-btn:hover {
            background: white;
            border-color: var(--primary);
            transform: translateY(-2px);
        }

        .action-btn i {
            font-size: 24px;
            color: var(--primary);
            width: 50px;
            height: 50px;
            background: rgba(37, 99, 235, 0.1);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .action-btn span {
            font-weight: 500;
            font-size: 14px;
        }

        /* Security Status */
        .security-section {
            background: white;
            border-radius: var(--border-radius);
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: var(--shadow);
        }

        .security-status {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 20px;
            background: #f0fdf4;
            border-radius: 8px;
            border: 1px solid #bbf7d0;
        }

        .security-status i {
            color: var(--success);
            font-size: 24px;
        }

        .security-info h3 {
            font-size: 16px;
            font-weight: 600;
            color: #166534;
            margin-bottom: 5px;
        }

        .security-info p {
            font-size: 14px;
            color: var(--gray-600);
        }

        /* Footer */
        .dashboard-footer {
            text-align: center;
            padding: 25px;
            color: var(--gray-600);
            font-size: 14px;
            border-top: 1px solid var(--gray-200);
            margin-top: 30px;
        }

        .security-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: rgba(37, 99, 235, 0.1);
            color: var(--primary);
            padding: 6px 12px;
            border-radius: 20px;
            font-weight: 500;
            font-size: 12px;
            margin: 0 10px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .dashboard-header {
                flex-direction: column;
                text-align: center;
            }
            
            .user-info {
                flex-direction: column;
                width: 100%;
            }
            
            .user-badge {
                width: 100%;
                justify-content: center;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }
            
            .actions-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 480px) {
            .dashboard-container {
                padding: 10px;
            }
            
            .dashboard-header,
            .actions-section,
            .security-section {
                padding: 20px;
            }
            
            .actions-grid {
                grid-template-columns: 1fr;
            }
            
            .header-left h1 {
                font-size: 22px;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Header -->
        <header class="dashboard-header">
            <div class="header-left">
                <h1>
                    <i class="fas fa-user-shield"></i>
                    Mi Cuenta
                </h1>
                <p>Bienvenido a tu panel de seguridad</p>
            </div>
            
            <div class="user-info">
                <div class="user-badge">
                    <div class="user-avatar" id="userAvatar">
                        <!-- JS will fill initials -->
                    </div>
                    <div class="user-details">
                        <h3 id="userName">Usuario</h3>
                        <p id="userRole">Usuario</p>
                    </div>
                </div>
                <a href="/logout" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    Salir
                </a>
            </div>
        </header>

        <!-- Success Alert -->
        <% if (success) { %>
            <div class="alert" id="successAlert">
                <i class="fas fa-check-circle"></i>
                <span><%= success %></span>
                <button class="close-alert" onclick="closeAlert()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        <% } %>

        <!-- Stats -->
        <div class="stats-grid">
            <div class="stat-card">
                <i class="fas fa-shield-alt stat-icon"></i>
                <div class="stat-content">
                    <h3>100%</h3>
                    <p>Protección Activa</p>
                </div>
            </div>
            
            <div class="stat-card">
                <i class="fas fa-bell stat-icon"></i>
                <div class="stat-content">
                    <h3>0</h3>
                    <p>Alertas de Seguridad</p>
                </div>
            </div>
            
            <div class="stat-card">
                <i class="fas fa-clock stat-icon"></i>
                <div class="stat-content">
                    <h3>24/7</h3>
                    <p>Monitoreo</p>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <section class="actions-section">
            <div class="section-header">
                <h2>
                    <i class="fas fa-bolt"></i>
                    Acciones Rápidas
                </h2>
                <p>Accede a las funciones principales</p>
            </div>
            
            <div class="actions-grid">
                <button class="action-btn" onclick="showComingSoon('Perfil')">
                    <i class="fas fa-user-cog"></i>
                    <span>Mi Perfil</span>
                </button>
                
                <button class="action-btn" onclick="showComingSoon('Seguridad')">
                    <i class="fas fa-lock"></i>
                    <span>Seguridad</span>
                </button>
                
                <button class="action-btn" onclick="showComingSoon('Actividad')">
                    <i class="fas fa-history"></i>
                    <span>Actividad</span>
                </button>
                
                <button class="action-btn" onclick="showComingSoon('Soporte')">
                    <i class="fas fa-headset"></i>
                    <span>Soporte</span>
                </button>
            </div>
        </section>

        <!-- Security Status -->
        <section class="security-section">
            <div class="section-header">
                <h2>
                    <i class="fas fa-shield-alt"></i>
                    Estado de Seguridad
                </h2>
                <p>Estado actual de tu protección</p>
            </div>
            
            <div class="security-status">
                <i class="fas fa-check-circle"></i>
                <div class="security-info">
                    <h3>Sistema Protegido</h3>
                    <p>Tu cuenta está segura con protección Honeypot activa</p>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="dashboard-footer">
            <p>
                © 2024 Honeypot Security | 
                <span class="security-badge">
                    <i class="fas fa-shield-alt"></i>
                    Sistema Seguro
                </span>
            </p>
            <p style="margin-top: 10px; font-size: 13px; color: var(--gray-400);">
                Último acceso: <%= new Date().toLocaleString('es-MX') %>
            </p>
        </footer>
    </div>

    <script>
        // Initialize user info
        document.addEventListener('DOMContentLoaded', function() {
            const userName = '<%= user ? user.name : "Usuario" %>' || 'Usuario';
            const userEmail = '<%= user ? user.email : "" %>';
            const userRole = '<%= user ? user.role : "Usuario" %>' || 'Usuario';
            
            // Set user info
            document.getElementById('userName').textContent = userName;
            document.getElementById('userRole').textContent = userRole;
            
            // Create avatar initials
            const initials = userName.split(' ')
                .map(n => n[0])
                .join('')
                .toUpperCase()
                .substring(0, 2);
            document.getElementById('userAvatar').textContent = initials;
            
            // Auto-close alert
            const alert = document.getElementById('successAlert');
            if (alert) {
                setTimeout(() => {
                    alert.style.opacity = '0';
                    alert.style.transition = 'opacity 0.5s';
                    setTimeout(() => {
                        alert.style.display = 'none';
                    }, 500);
                }, 5000);
            }
            
            // Update last access time
            updateLastAccessTime();
        });
        
        // Close alert
        function closeAlert() {
            const alert = document.getElementById('successAlert');
            if (alert) {
                alert.style.opacity = '0';
                setTimeout(() => {
                    alert.style.display = 'none';
                }, 300);
            }
        }
        
        // Show coming soon message
        function showComingSoon(feature) {
            alert(`${feature} - Esta funcionalidad está en desarrollo.\n\nPróximamente disponible.`);
        }
        
        // Update last access time
        function updateLastAccessTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('es-MX', {
                hour: '2-digit',
                minute: '2-digit'
            });
            const dateString = now.toLocaleDateString('es-MX');
            
            const footer = document.querySelector('.dashboard-footer p:last-child');
            if (footer) {
                footer.innerHTML = `Último acceso: Hoy, ${timeString}`;
            }
        }
        
        // Simulate real-time updates
        setInterval(() => {
            const protectionCard = document.querySelector('.stat-card:nth-child(1) h3');
            if (protectionCard) {
                const current = parseInt(protectionCard.textContent);
                if (current < 100) {
                    const newValue = Math.min(current + Math.random() * 0.5, 100);
                    protectionCard.textContent = newValue.toFixed(1) + '%';
                }
            }
        }, 30000);
    </script>
</body>
</html>